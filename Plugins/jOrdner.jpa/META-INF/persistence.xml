<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<persistence-unit name="configured" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.gh.jordner.jpa.VerzeichnisImpl</class>
		<class>com.gh.jordner.jpa.DateiImpl</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<!-- TRICKY: Using an in memory db does not work. For some obscure reason 
				that results in an SQL exception. So use a db in the temp area. -->
				
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:h2:database/h2jpa;AUTO_SERVER=TRUE;ACCESS_MODE_DATA=rw;TRACE_LEVEL_FILE=4" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="eclipselink.logging.level" value="FINE" />
		</properties>
	</persistence-unit>

	<!-- Unconfigured persistence unit - will be done programmatically -->
	<persistence-unit name="unconfigured"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.gh.jordner.jpa.VerzeichnisImpl</class>
		<class>com.gh.jordner.jpa.DateiImpl</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
</persistence>
